.mcq_tit
    margin-bottom 45px
    h3
        text-align center
        display block
        width 100%
        margin: 0;
        color: #999;
        font-size: 30px;
        margin-bottom: 16px;
    .mcq_tit_main
        display: flex
        width 475px
        height 45px
        margin 0 auto
        align-items center
        p,h4
            font-size 34px
        h4
            width 275px
            text-align: center
        p
            align-items center
            span
                display: inline-block
                width 90px
                height 2px
                background #d9d9d9
                vertical-align middle
            i 
                display: inline-block
                width 10px
                height 10px
                background $mainColor
                vertical-align middle
            
